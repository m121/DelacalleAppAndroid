<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="1dp"
    android:paddingRight="1dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delacalle.delacalle.delacalleapp.agregarrestaurante_delacalleactivity">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        style="@style/MyCardViewStyle"
        android:layout_height="250dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardView">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">



            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewfotounomostrarrestaurante"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                app:civ_border_width="2dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:civ_border_color="#FF000000"
                android:layout_above="@+id/editTextdescripcionmostrarrestaurante" />
            <TextView
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:id="@+id/editTextnombremostrarrestaurante"
                android:hint="Nombre Restaurante"
                android:maxLength="20"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/imageViewfotounomostrarrestaurante"
                android:layout_toEndOf="@+id/imageViewfotounomostrarrestaurante"
                android:textStyle="bold" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:color="#ffffff"
                android:theme="@style/RatingBar"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:id="@+id/ratingBarmostrarrestaurante"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageViewfotounomostrarrestaurante"
                android:layout_toEndOf="@+id/imageViewfotounomostrarrestaurante" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="15sp"
                android:id="@+id/editTextdescripcionmostrarrestaurante"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="5dp"
                android:layout_marginBottom="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono"
                android:id="@+id/textViewTelefonoM"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textStyle="bold"
                android:layout_above="@+id/ratingBarmostrarrestaurante"
                android:layout_alignLeft="@+id/ratingBarmostrarrestaurante"
                android:layout_alignStart="@+id/ratingBarmostrarrestaurante" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:id="@+id/textViewDireccionM"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>