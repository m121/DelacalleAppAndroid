        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textViewPrecioPlatoRestauranteDetalleCarta"
            android:textSize="35sp"
            android:layout_below="@+id/textViewDescripcionPlatoResturanteDetalleCarta"
            android:layout_alignRight="@+id/textViewNombrePlatoRestauranteDetalleCarta"
            android:layout_alignEnd="@+id/textViewNombrePlatoRestauranteDetalleCarta"
