<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delacalle.delacalle.delacalleapp.cartaDetalle_delacalleactivity">




    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewLogoDetalleCarta"
        android:background="#000000"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Restaurante"
        android:id="@+id/textViewNombreRestauranteDetalleCarta"
        android:textSize="30sp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageViewFotoRestauranteDetalleCarta"
        android:background="#aa0000"
        android:layout_below="@+id/imageViewLogoDetalleCarta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre plato"
        android:id="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_below="@+id/imageViewFotoRestauranteDetalleCarta"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Descripcion plato"
        android:id="@+id/textViewDescripcionPlatoResturanteDetalleCarta"
        android:layout_below="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_alignLeft="@+id/imageViewFotoRestauranteDetalleCarta"
        android:layout_alignStart="@+id/imageViewFotoRestauranteDetalleCarta"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="$2500"
        android:id="@+id/textViewPrecioPlatoRestauranteDetalleCarta"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_alignEnd="@+id/textViewNombrePlatoRestauranteDetalleCarta" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

</RelativeLayout>
