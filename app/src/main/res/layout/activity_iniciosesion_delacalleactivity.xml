    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextnombreiniciarsesion"
            android:layout_marginTop="67dp"
            android:hint="Nombre usuario"
            android:maxLength="20"
            android:singleLine="true"
            android:lines="1"
            android:background="@null"
            android:textColor="#ffffff"
            android:color="#ffffff"
            android:layout_margin="4dp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/imageButtonGmail"
            android:layout_centerHorizontal="true"
            android:textSize="25sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Contraseña"
            android:textColor="#ffffff"
            android:singleLine="true"
            android:lines="1"
            android:maxLength="20"
            android:background="@null"
            android:layout_margin="4dp"
            android:textColorHint="#ffffff"
            android:id="@+id/editTextcontrasenainiciarsesion"
            android:layout_below="@+id/editTextnombreiniciarsesion"
            android:layout_alignLeft="@+id/editTextnombreiniciarsesion"
            android:layout_alignStart="@+id/editTextnombreiniciarsesion"
            android:textSize="25sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Entrar"
            android:id="@+id/btniniciarsesion"
            android:background="#D40000"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="¿No tienes una cuenta? Regístrate"
            android:id="@+id/btnlinkregistrar"
            android:background="@null"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />


    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook"
        android:id="@+id/btnSignInFacebook"
        android:layout_marginRight="104dp"
        android:layout_marginEnd="104dp"
        android:layout_alignTop="@+id/btnSignInInstagram"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/instagram"
        android:id="@+id/btnSignInInstagram"
        android:layout_marginRight="107dp"
        android:layout_marginEnd="107dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSignInFacebook"
        android:layout_toStartOf="@+id/btnSignInFacebook" />


