<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context="com.delacalle.delacalle.delacalleapp.registrarresponsable_delacalleactivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextnombreregistroResponsable"
        android:layout_marginTop="119dp"
        android:hint="Nombre"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnregistrarse"
        android:layout_alignStart="@+id/btnregistrarse" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextemailregistroResponsable"
        android:hint="Email"
        android:maxLength="40"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/editTextnombreregistroResponsable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextpassregistroResponsable"
        android:hint="Clave"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextrepassregistroResponsable"
        android:hint="Repetir clave"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/editTextemailregistroResponsable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="73dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Registrar Responsable"
            android:id="@+id/btnregistrarResponsable"
            android:background="@color/buttoncolor"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/editTextrepassregistroResponsable"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Responsable"
        android:id="@+id/textViewtituloregistrarseResponsable"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextnombreregistro"
        android:layout_alignStart="@+id/editTextnombreregistro"
        android:layout_marginTop="42dp"
        android:textColor="#ffffff"
        android:textSize="26sp" />


</RelativeLayout>
