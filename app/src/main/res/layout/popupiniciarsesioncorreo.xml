<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:id="@+id/h">

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
    android:padding="10dp"
    android:weightSum="1">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/editTextnombreiniciarsesion"
        android:layout_marginTop="67dp"
        android:hint="Nombre usuario"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:layout_margin="4dp"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/imageButtonGmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="Contraseña"
        android:textColor="#ffffff"
        android:maxLength="20"
        android:layout_margin="4dp"
        android:textColorHint="#ffffff"
        android:id="@+id/editTextcontrasenainiciarsesion"
        android:layout_below="@+id/editTextnombreiniciarsesion"
        android:layout_alignLeft="@+id/editTextnombreiniciarsesion"
        android:layout_alignStart="@+id/editTextnombreiniciarsesion" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Entrar"
        android:id="@+id/btniniciarsesion"
        android:background="#545454"
        android:layout_margin="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:textColor="#FFFFFF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="¿No tienes una cuenta? Regístrate"
            android:id="@+id/btnlinkregistrar"
            android:background="@null"
            android:layout_margin="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="35dp"
            android:textColor="#FFFFFF" />
</LinearLayout>
</RelativeLayout>