<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fondomenublanco768x1280"
    android:layout_height="match_parent">

   <!-- <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewFotoUsuarioComentario"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewFotoUsuarioComentario"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/mostrar_foto"
        app:civ_border_width="2dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:id="@+id/textViewNombreUsuario"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewFotoUsuarioComentario"
        android:layout_toEndOf="@+id/imageViewFotoUsuarioComentario"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Comentario"
        android:id="@+id/textViewComentario"
        android:layout_below="@+id/textViewNombreUsuario"
        android:layout_toRightOf="@+id/imageViewFotoUsuarioComentario"
        android:layout_toEndOf="@+id/imageViewFotoUsuarioComentario"
        android:textSize="25sp" />
</RelativeLayout>