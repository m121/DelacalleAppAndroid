<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.delacalle.delacalle.delacalleapp.agregarrestaurante_delacalleactivity">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        style="@style/MyCardViewStyle"
        android:layout_height="360dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/cardView">

        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:id="@+id/imageViewfotounomostrarrestaurante"
            android:src="@drawable/mostrar_foto"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/editTextnombremostrarrestaurante"
            android:hint="Nombre Restaurante"
            android:maxLength="20"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageViewfotounomostrarrestaurante"
            android:layout_toEndOf="@+id/imageViewfotounomostrarrestaurante"
            android:textStyle="bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:color="#ffffff"
            android:theme="@style/RatingBar"
            android:isIndicator="true"
            android:numStars="5"
            android:id="@+id/ratingBarmostrarrestaurante"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/editTextnombremostrarrestaurante"
            android:layout_alignStart="@+id/editTextnombremostrarrestaurante" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textSize="20sp"
                android:id="@+id/editTextdescripcionmostrarrestaurante"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono"
                android:id="@+id/textViewTelefonoM"
                android:layout_above="@+id/ratingBarmostrarrestaurante"
                android:layout_toRightOf="@+id/imageViewfotounomostrarrestaurante"
                android:layout_toEndOf="@+id/imageViewfotounomostrarrestaurante"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion"
                android:id="@+id/textViewDireccionM"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>




</RelativeLayout>