<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenublanco768x1280"
    android:id="@+id/relativelayoutPaletacambiar"
    xmlns:fab="http://schemas.android.com/tools"
    android:orientation="vertical">




    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <!-- <ImageView
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:id="@+id/imageViewfotoLogoA"
         android:layout_marginTop="29dp"
         android:background="#000000"
         android:layout_below="@+id/toolbar"
         android:layout_toLeftOf="@+id/imageViewfotoRestauranteA"
         android:layout_toStartOf="@+id/imageViewfotoRestauranteA"
         android:layout_marginRight="38dp"
         android:layout_marginEnd="38dp" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewfotoLogoA"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/agregar_foto"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="29dp"
        android:layout_toLeftOf="@+id/imageViewfotoRestauranteA"
        android:layout_toStartOf="@+id/imageViewfotoRestauranteA"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp"
        app:civ_border_color="#FF000000"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewfotoRestauranteA"
        android:background="@drawable/agregar_foto"
        android:layout_marginRight="53dp"
        android:layout_marginEnd="53dp"
        android:layout_alignRight="@+id/frame_layout"
        android:layout_alignEnd="@+id/frame_layout"
        android:layout_below="@+id/textViewTituloFotoGrande"
        android:layout_above="@+id/editTextNombreRestauranteA" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nombre Restaurante"
        android:id="@+id/editTextNombreRestauranteA"
        android:textSize="15sp"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="5dp"
        android:layout_above="@+id/editTextDescripcionRestauranteA"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/crearrestauranteDescripcion"
        android:id="@+id/editTextDescripcionRestauranteA"
        android:textSize="15sp"
        android:lines="2"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890:-_$., "
        android:paddingLeft="5dp"
        android:layout_above="@+id/editTextDireccionRestauranteA"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Dirección"
        android:id="@+id/editTextDireccionRestauranteA"
        android:textSize="15sp"
        android:singleLine="true"
        android:lines="1"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890#- "
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Teléfono"
        android:inputType="phone"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="5dp"
        android:id="@+id/editTextTelefonoRestauranteA"
        android:textSize="15sp"
        android:layout_above="@+id/editTextWebRestauranteA"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Sitio web/Red social"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="5dp"
        android:inputType="textUri"
        android:id="@+id/editTextWebRestauranteA"
        android:textSize="15sp"
        android:layout_above="@+id/btnGuardarRestaurante"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Guardar y seguir"
        android:id="@+id/btnGuardarRestaurante"
        android:textColor="#ffffff"
        android:background="@color/buttoncolor"
        android:textSize="15sp"
        android:layout_above="@+id/imageViewbtnPaletaRestaurante"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/imageViewbtnPaletaRestaurante"
        android:background="@drawable/botonpaleta"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/frame_layout"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Foto grande del restaurante"
        android:id="@+id/textViewTituloFotoGrande"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@+id/imageViewfotoRestauranteA"
        android:layout_alignStart="@+id/imageViewfotoRestauranteA"
        android:layout_alignRight="@+id/imageViewfotoRestauranteA"
        android:layout_alignEnd="@+id/imageViewfotoRestauranteA"
        android:textStyle="bold" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Foto logo"
        android:id="@+id/textViewTituloFotoLogo"
        android:textStyle="bold"
        android:layout_below="@+id/toolbar"
        android:layout_toLeftOf="@+id/textViewTituloFotoGrande"
        android:layout_toStartOf="@+id/textViewTituloFotoGrande" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_alignBottom="@+id/imageViewbtnPaletaRestaurante"
        android:layout_toRightOf="@+id/btnGuardarRestaurante"
        android:layout_toEndOf="@+id/btnGuardarRestaurante">
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:id="@+id/fabmenu"
            fab:fab_size="normal"
            android:src="@drawable/ic_agregar"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_below="@+id/editTextNombreRestauranteA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabeditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_editar"
                fab:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabagregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_restaurante"
                fab:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabperfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_perfil"
                fab:fab_size="mini"
                />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

</RelativeLayout>
