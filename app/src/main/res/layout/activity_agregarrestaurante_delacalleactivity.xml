<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextnombreagregarrestaurante"
        android:hint="Nombre Restaurante"
        android:maxLength="20"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#696969"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/editTextdescripcionagregarrestaurante"
        android:hint="DescripciÃ³n"
        android:maxLength="60"
        android:textSize="20sp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:textColorHint="#696969"
        android:layout_below="@+id/editTextnombreagregarrestaurante"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextplato1agregarrestaurante"
        android:hint="Plato 1"
        android:maxLength="20"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#696969"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextplato2agregarrestaurante"
        android:hint="Plato 2"
        android:maxLength="20"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#696969"
        android:layout_below="@+id/editTextplato1agregarrestaurante"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextplato3agregarrestaurante"
        android:hint="Plato 3"
        android:maxLength="20"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textColorHint="#696969"
        android:layout_below="@+id/editTextplato2agregarrestaurante"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewfotounoagregarrestaurante"
        android:background="@mipmap/ic_camara"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignTop="@+id/editTextdescripcionagregarrestaurante"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewfotodosagregarrestaurante"
        android:background="@mipmap/ic_camara"
        android:layout_below="@+id/imageViewfotounoagregarrestaurante"
        android:layout_toRightOf="@+id/btnagregarrestaurante"
        android:layout_toEndOf="@+id/btnagregarrestaurante" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageViewfototresagregarrestaurante"
        android:background="@mipmap/ic_camara"
        android:layout_below="@+id/imageViewfotodosagregarrestaurante"
        android:layout_toRightOf="@+id/btnagregarrestaurante"
        android:layout_toEndOf="@+id/btnagregarrestaurante" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Agregar Restaurante"
        android:id="@+id/btnagregarrestaurante"
        android:background="@color/buttoncolor"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carta"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_below="@+id/editTextdescripcionagregarrestaurante"
        android:layout_alignLeft="@+id/editTextplato2agregarrestaurante"
        android:layout_alignStart="@+id/editTextplato2agregarrestaurante"
        android:layout_marginTop="21dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fotos"
        android:id="@+id/Textviewtitulofoto"
        android:layout_alignBottom="@+id/editTextnombreagregarrestaurante"
        android:layout_toRightOf="@+id/btnagregarrestaurante"
        android:layout_toEndOf="@+id/btnagregarrestaurante"
        android:textStyle="bold"
        android:textSize="20sp" />


</RelativeLayout>
