<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/fondomenublanco768x1280"
    tools:context="com.delacalle.delacalle.delacalleapp.resetearcontrasenadesdelogin_delacalleactivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:layout_marginTop="-2dp"
        android:padding="10dp"
        android:hint="@string/resetearcontrasenacorreo"
        android:id="@+id/edittextcorreoresetearcontrasena"
        android:textColor="#000000"
        android:textColorHint="#696969"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnresetearcontrasena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/resetearcontrasenabtnresetear"
        android:background="@color/buttoncolor"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/edittextcorreoresetearcontrasena"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:textSize="15sp" />


    <ImageButton
        android:id="@+id/btniramenuinicio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#f27817"
        android:textAllCaps="false"
        android:src="@mipmap/ic_home"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
