<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.delacalle.delacalle.delacalleapp.cartaDetalle_delacalleactivity">




    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageViewLogoDetalleCarta"
        android:background="#000000"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Restaurante"
        android:id="@+id/textViewNombreRestauranteDetalleCarta"
        android:textSize="30sp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageViewLogoDetalleCarta"
        android:layout_toEndOf="@+id/imageViewLogoDetalleCarta" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/imageViewFotoRestauranteDetalleCarta"
        android:background="#000000"
        android:layout_below="@+id/imageViewLogoDetalleCarta"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre plato"
        android:id="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_below="@+id/imageViewFotoRestauranteDetalleCarta"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Descripcion plato"
        android:id="@+id/textViewDescripcionPlatoResturanteDetalleCarta"
        android:layout_below="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_alignLeft="@+id/imageViewFotoRestauranteDetalleCarta"
        android:layout_alignStart="@+id/imageViewFotoRestauranteDetalleCarta"
        android:textSize="25sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="$2500"
        android:id="@+id/textViewPrecioPlatoRestauranteDetalleCarta"
        android:textSize="35sp"
        android:layout_below="@+id/textViewDescripcionPlatoResturanteDetalleCarta"
        android:layout_alignRight="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_alignEnd="@+id/textViewNombrePlatoRestauranteDetalleCarta" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:id="@+id/fabmenu"
        fab:fab_size="normal"
        android:src="@drawable/ic_agregar"
        app:layout_anchorGravity="bottom|right|end"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textViewNombrePlatoRestauranteDetalleCarta"
        android:layout_toEndOf="@+id/textViewNombrePlatoRestauranteDetalleCarta">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabeditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_editar"
            fab:fab_size="mini"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabagregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_restaurante"
            fab:fab_size="mini"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabperfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_perfil"
            fab:fab_size="mini"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

</RelativeLayout>
