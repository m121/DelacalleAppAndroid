<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#a5714a"
    tools:context="com.delacalle.delacalle.delacalleapp.registrarresponsable_delacalleactivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextnombreregistroResponsable"
        android:layout_marginTop="119dp"
        android:hint="Nombre"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnregistrarse"
        android:layout_alignStart="@+id/btnregistrarse"
        android:textSize="20sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextemailregistroResponsable"
        android:hint="Email"
        android:maxLength="40"
        android:textColor="#ffffff"
        android:inputType="textEmailAddress"
        android:textColorHint="#ffffff"
        android:layout_below="@+id/editTextnombreregistroResponsable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextpassregistroResponsable"
        android:hint="Clave"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/editTextemailregistroResponsable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/editTextrepassregistroResponsable"
        android:hint="Repetir clave"
        android:maxLength="20"
        android:textColor="#ffffff"
        android:inputType="textPassword"
        android:textColorHint="#ffffff"
        android:textSize="20sp"
        android:layout_below="@+id/editTextpassregistroResponsable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Registrar Responsable"
            android:id="@+id/btnregistrarResponsable"
            android:background="#f27817"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btnEnlaceMenu"
            android:layout_alignStart="@+id/btnEnlaceMenu" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Menu"
            android:id="@+id/btnEnlaceMenu"
            android:background="@null"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btnregistrarResponsable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="48dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Cerrar sesiÃ³n"
            android:id="@+id/btnlogout"
            android:background="@null"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/btnEnlaceMenu"
            android:layout_alignLeft="@+id/btnEnlaceMenu"
            android:layout_alignStart="@+id/btnEnlaceMenu"
            android:layout_marginTop="42dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Responsable"
        android:id="@+id/textViewtituloregistrarseResponsable"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextnombreregistro"
        android:layout_alignStart="@+id/editTextnombreregistro"
        android:layout_marginTop="42dp"
        android:textColor="#ffffff"
        android:textSize="26sp" />


</RelativeLayout>
