<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/editTextnombreregistro"
            android:layout_marginTop="50dp"
            android:hint="Nombre"
            android:textSize="30sp"
            android:maxLength="20"
            android:background="@color/edittextback"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnregistrarse"
            android:layout_alignStart="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/editTextemailregistro"
            android:hint="Email"
            android:background="@color/edittextback"
            android:maxLength="40"
            android:textColor="#ffffff"
            android:inputType="textEmailAddress"
            android:textSize="30sp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/editTextnombreregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/editTextpassregistro"
            android:hint="Clave"
            android:background="@color/edittextback"
            android:maxLength="20"
            android:textColor="#ffffff"
            android:inputType="textPassword"
            android:textSize="30sp"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/editTextemailregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:id="@+id/editTextrepassregistro"
            android:hint="Repetir clave"
            android:maxLength="20"
            android:background="@color/edittextback"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:inputType="textPassword"
            android:textColorHint="#ffffff"
            android:layout_below="@+id/editTextpassregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <Button
            android:layout_width="400dp"
            android:layout_height="90dp"
            android:text="Registrarse"
            android:id="@+id/btnregistrarse"
            android:background="@color/buttoncolor"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_below="@+id/editTextrepassregistro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <Button
            android:id="@+id/buttonenlacealogin"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="Enlace a iniciar sesiÃ³n"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:layout_below="@+id/btnregistrarse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro"
        android:id="@+id/textViewtituloregistrarse"
        android:textColor="#ffffff"
        android:textSize="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
