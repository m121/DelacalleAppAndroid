<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.delacalle.delacalle.delacalleapp.PageFragmentInformacionDetalle">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Restaurante"
            android:id="@+id/textViewtituloNombreRestauranteDetalle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Restaurante"
            android:id="@+id/textViewNombreRestauranteDetalle"
            android:textSize="35sp"
            android:layout_below="@+id/textViewtituloNombreRestauranteDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:id="@+id/textViewTituloDescripcionDetalle"
            android:textSize="40sp"
            android:layout_below="@+id/textViewNombreRestauranteDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Descripcion"
            android:id="@+id/textViewDescripcionDetalle"
            android:textSize="35sp"
            android:layout_below="@+id/textViewTituloDescripcionDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:id="@+id/textViewTituloDireccionDetalle"
            android:textSize="40sp"
            android:layout_below="@+id/textViewDescripcionDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección"
            android:id="@+id/textViewDireccionDetalle"
            android:textSize="35sp"
            android:layout_below="@+id/textViewTituloDireccionDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:id="@+id/textViewTituloTelefonoDetalle"
            android:textSize="40sp"
            android:layout_below="@+id/textViewDireccionDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono"
            android:id="@+id/textViewTelefonoDetalle"
            android:textSize="35sp"
            android:layout_below="@+id/textViewTituloTelefonoDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web"
            android:id="@+id/textViewTituloWebDetalle"
            android:textSize="40sp"
            android:layout_below="@+id/textViewTelefonoDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Web"
            android:id="@+id/textViewWebDetalle"
            android:textSize="35sp"
            android:layout_below="@+id/textViewTituloWebDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calificación"
            android:id="@+id/textViewTituloCalificacionDetalle"
            android:textSize="40sp"
            android:layout_below="@+id/textViewWebDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarCalificacionDetalle"
            android:theme="@style/RatingBar"
            android:layout_below="@+id/textViewTituloCalificacionDetalle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">
    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="16dp"
        android:id="@+id/fabmenu"
        fab:fab_size="normal"
        android:src="@drawable/ic_agregar"
        app:layout_anchor="@id/listViewrestaurantes"
        app:layout_anchorGravity="bottom|right|end" >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabeditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_editar"
            fab:fab_size="mini"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabagregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_restaurante"
            fab:fab_size="mini"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabperfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_perfil"
            fab:fab_size="mini"
            />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </FrameLayout>
</FrameLayout>
