<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomenublanco768x1280"
    android:id="@+id/relativelayoutPaletacambiar"
    xmlns:fab="http://schemas.android.com/tools"
    android:orientation="vertical">




    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />



    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageViewfotoLogoA"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/agregar_foto"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_below="@+id/textViewTituloFotoGrande"
        android:layout_alignRight="@+id/imageViewbtnPaletaRestaurante"
        android:layout_alignEnd="@+id/imageViewbtnPaletaRestaurante"
        android:layout_marginRight="165dp"
        android:layout_marginEnd="165dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewfotoRestauranteA"
        android:background="@drawable/agregar_foto"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/textViewTituloFotoGrande"
        android:layout_alignLeft="@+id/textViewTituloFotoGrande"
        android:layout_alignStart="@+id/textViewTituloFotoGrande" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Nombre Restaurante"
        android:id="@+id/editTextNombreRestauranteA"
        android:textSize="30sp"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="10dp"
        android:layout_below="@+id/imageViewfotoRestauranteA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textIsSelectable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Descripción"
        android:digits="abcdefghijklmnopqrstuvwxyz1234567890 "
        android:id="@+id/editTextDescripcionRestauranteA"
        android:textSize="30sp"
        android:lines="2"
        android:paddingLeft="10dp"
        android:layout_below="@+id/editTextNombreRestauranteA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Dirección"
        android:id="@+id/editTextDireccionRestauranteA"
        android:textSize="30sp"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="10dp"
        android:layout_below="@+id/editTextDescripcionRestauranteA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Teléfono"
        android:inputType="phone"
        android:singleLine="true"
        android:lines="1"
        android:paddingLeft="5dp"
        android:id="@+id/editTextTelefonoRestauranteA"
        android:textSize="30sp"
        android:layout_below="@+id/editTextDireccionRestauranteA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Sitio web/Red social"
        android:singleLine="true"
        android:lines="1"
        android:inputType="textUri"
        android:id="@+id/editTextWebRestauranteA"
        android:textSize="30sp"
        android:paddingLeft="10dp"
        android:layout_below="@+id/editTextTelefonoRestauranteA"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Actualizar y seguir"
        android:id="@+id/btnActualizarRestaurante"
        android:textColor="#ffffff"
        android:background="@color/buttoncolor"
        android:textSize="25sp"
        android:layout_alignTop="@+id/btnEliminarRestaurante"
        android:layout_alignRight="@+id/textViewTituloFotoLogo"
        android:layout_alignEnd="@+id/textViewTituloFotoLogo" />

    <Button
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Eliminar Restaurante"
        android:id="@+id/btnEliminarRestaurante"
        android:textColor="#ffffff"
        android:background="@color/buttoncolor"
        android:textSize="25sp"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageViewfotoRestauranteA"
        android:layout_alignStart="@+id/imageViewfotoRestauranteA" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/imageViewbtnPaletaRestaurante"
        android:background="@drawable/botonpaleta"
        android:layout_below="@+id/editTextWebRestauranteA"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Foto grande del restaurante"
        android:id="@+id/textViewTituloFotoGrande"
        android:layout_below="@+id/toolbar"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/textViewTituloFotoLogo"
        android:layout_toEndOf="@+id/textViewTituloFotoLogo" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Foto logo"
        android:id="@+id/textViewTituloFotoLogo"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_above="@+id/imageViewfotoLogoA"
        android:layout_alignLeft="@+id/imageViewfotoLogoA"
        android:layout_alignStart="@+id/imageViewfotoLogoA" />

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">
        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:id="@+id/fabmenu"
            fab:fab_size="normal"
            android:src="@drawable/ic_agregar"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_below="@+id/editTextNombreRestauranteA"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabeditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_editar"
                fab:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabagregar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_restaurante"
                fab:fab_size="mini"
                />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabperfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:src="@mipmap/ic_perfil"
                fab:fab_size="mini"
                />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>
    </FrameLayout>

</RelativeLayout>
