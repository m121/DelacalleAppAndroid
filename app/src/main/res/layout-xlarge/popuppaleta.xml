<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/fondomenublanco768x1280"
    android:layout_height="match_parent">

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor1"
        android:background="#b56497"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor2"
        android:background="#169c79"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_alignTop="@+id/btnColor1"
        android:layout_toRightOf="@+id/btnColor1"
        android:layout_toEndOf="@+id/btnColor1" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor3"
        android:background="#f05543"
        android:layout_below="@+id/btnColor1"
        android:layout_alignLeft="@+id/btnColor1"
        android:layout_alignStart="@+id/btnColor1"
        android:layout_marginTop="85dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor4"
        android:background="#da4f70"
        android:layout_alignTop="@+id/btnColor3"
        android:layout_alignLeft="@+id/btnColor2"
        android:layout_alignStart="@+id/btnColor2" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor5"
        android:background="#41b7ab"
        android:layout_below="@+id/btnColor3"
        android:layout_toLeftOf="@+id/btnColor2"
        android:layout_toStartOf="@+id/btnColor2"
        android:layout_marginTop="36dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/btnColor6"
        android:background="#f0bf59"
        android:layout_alignTop="@+id/btnColor5"
        android:layout_alignLeft="@+id/btnColor4"
        android:layout_alignStart="@+id/btnColor4" />
</RelativeLayout>