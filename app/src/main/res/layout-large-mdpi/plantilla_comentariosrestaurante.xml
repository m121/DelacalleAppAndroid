<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageViewFotoUsuarioComentario"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mostrar_foto"
            app:civ_border_width="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plantillacomentariosusuario"
            android:id="@+id/textViewNombreUsuario"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageViewFotoUsuarioComentario"
            android:layout_toEndOf="@+id/imageViewFotoUsuarioComentario"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="@string/plantillacomentarioscomentario"
            android:id="@+id/textViewComentario"
            android:layout_below="@+id/textViewNombreUsuario"
            android:layout_toRightOf="@+id/imageViewFotoUsuarioComentario"
            android:layout_toEndOf="@+id/imageViewFotoUsuarioComentario"
            android:textSize="30sp" />
    </RelativeLayout>
</RelativeLayout>