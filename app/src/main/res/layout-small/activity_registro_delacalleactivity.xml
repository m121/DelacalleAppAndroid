<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/fondomenublanco768x1280"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro usuario"
            android:id="@+id/textViewtituloregistrarse"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/editTextnombreregistro"
            android:layout_alignStart="@+id/editTextnombreregistro"
            android:layout_marginTop="42dp"
            android:textColor="#000000"
            android:textSize="26sp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextnombreregistro"
            android:layout_marginTop="50dp"
            android:hint="Nombre usuario"
            android:maxLength="20"
            android:textColor="#000000"
            android:singleLine="true"
            android:textColorHint="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/btnregistrarse"
            android:layout_alignStart="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextemailregistro"
            android:hint="Email"
            android:maxLength="40"
            android:singleLine="true"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            android:textColorHint="#000000"
            android:layout_below="@+id/editTextnombreregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextpassregistro"
            android:hint="Clave"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:layout_below="@+id/editTextemailregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/editTextrepassregistro"
            android:hint="Repetir clave"
            android:maxLength="20"
            android:singleLine="true"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:textColorHint="#000000"
            android:layout_below="@+id/editTextpassregistro"
            android:layout_alignLeft="@+id/btnregistrarse" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Registro"
            android:id="@+id/btnregistrarse"
            android:background="@color/buttoncolor"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_below="@+id/editTextrepassregistro"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:id="@+id/buttonenlacealogin"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:background="#f27817"
            android:src="@mipmap/ic_home"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@+id/btnregistrarse"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
